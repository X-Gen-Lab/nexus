{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (J-Link)",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "jlink",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/applications/blinky/blinky.elf",
            "device": "STM32F407VG",
            "interface": "swd",
            "runToEntryPoint": "main",
            "svdFile": "${workspaceFolder}/platforms/stm32f4/svd/STM32F407.svd",
            "preLaunchTask": "Build"
        },
        {
            "name": "Debug (ST-Link)",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "stlink",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/applications/blinky/blinky.elf",
            "device": "STM32F407VG",
            "interface": "swd",
            "runToEntryPoint": "main",
            "svdFile": "${workspaceFolder}/platforms/stm32f4/svd/STM32F407.svd",
            "preLaunchTask": "Build"
        },
        {
            "name": "Debug (OpenOCD)",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/applications/blinky/blinky.elf",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f4x.cfg"
            ],
            "runToEntryPoint": "main",
            "preLaunchTask": "Build"
        },
        {
            "name": "Debug Unit Tests (Native)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/nexus_tests",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "Build"
        }
    ]
}
