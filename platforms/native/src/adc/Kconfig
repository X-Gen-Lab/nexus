#ADC Configuration for Native Platform

config NATIVE_ADC_ENABLE
    bool "Enable ADC support for Native platform"
    default y
    depends on PLATFORM_NATIVE
    help
      Enable ADC peripheral support for the Native platform.
      This provides simulated ADC functionality for testing
      and development on PC.

if NATIVE_ADC_ENABLE

#ADC0 Configuration
menuconfig INSTANCE_NX_ADC_0
    bool "Enable ADC0"
    default y
    depends on NATIVE_ADC_ENABLE
    help
      Enable ADC instance 0.

if INSTANCE_NX_ADC_0

config ADC0_CHANNEL_COUNT
    int "ADC0 channel count"
    default 16
    range 1 16
    help
      Number of ADC channels for ADC0.

choice
    prompt "ADC0 resolution"
    default NX_ADC0_RESOLUTION_12
    depends on INSTANCE_NX_ADC_0

config NX_ADC0_RESOLUTION_8
    bool "8-bit resolution"

config NX_ADC0_RESOLUTION_10
    bool "10-bit resolution"

config NX_ADC0_RESOLUTION_12
    bool "12-bit resolution"

config NX_ADC0_RESOLUTION_16
    bool "16-bit resolution"

endchoice

config ADC0_RESOLUTION_VALUE
    int
    default 0 if NX_ADC0_RESOLUTION_8
    default 1 if NX_ADC0_RESOLUTION_10
    default 2 if NX_ADC0_RESOLUTION_12
    default 3 if NX_ADC0_RESOLUTION_16

config ADC0_RESOLUTION
    int
    default 8 if NX_ADC0_RESOLUTION_8
    default 10 if NX_ADC0_RESOLUTION_10
    default 12 if NX_ADC0_RESOLUTION_12
    default 16 if NX_ADC0_RESOLUTION_16

choice
    prompt "ADC0 sampling time"
    default NX_ADC0_SAMPLE_TIME_MEDIUM
    depends on INSTANCE_NX_ADC_0

config NX_ADC0_SAMPLE_TIME_FAST
    bool "Fast (1.5 cycles)"

config NX_ADC0_SAMPLE_TIME_MEDIUM
    bool "Medium (7.5 cycles)"

config NX_ADC0_SAMPLE_TIME_SLOW
    bool "Slow (28.5 cycles)"

endchoice

config ADC0_SAMPLE_TIME_VALUE
    int
    default 0 if NX_ADC0_SAMPLE_TIME_FAST
    default 1 if NX_ADC0_SAMPLE_TIME_MEDIUM
    default 2 if NX_ADC0_SAMPLE_TIME_SLOW

endif # INSTANCE_NX_ADC_0

#ADC1 Configuration
menuconfig INSTANCE_NX_ADC_1
    bool "Enable ADC1"
    default n
    depends on NATIVE_ADC_ENABLE
    help
      Enable ADC instance 1.

if INSTANCE_NX_ADC_1

config ADC1_CHANNEL_COUNT
    int "ADC1 channel count"
    default 16
    range 1 16
    help
      Number of ADC channels for ADC1.

choice
    prompt "ADC1 resolution"
