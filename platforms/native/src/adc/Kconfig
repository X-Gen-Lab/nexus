#ADC Buffer Configuration
config NATIVE_ADC_BUFFER_ENABLE
    bool "Enable ADC Buffer support for Native platform"
    default y
    depends on PLATFORM_NATIVE && NATIVE_ADC_ENABLE
    help
      Enable ADC Buffer peripheral support for the Native platform.
      This provides simulated buffered multi-channel ADC sampling
      for testing and development on PC.

if NATIVE_ADC_BUFFER_ENABLE

#ADC Buffer 0 Configuration
menuconfig INSTANCE_NX_ADC_BUFFER_0
    bool "Enable ADC_BUFFER0"
    default y
    depends on NATIVE_ADC_BUFFER_ENABLE
    help
      Enable ADC Buffer instance 0.

if INSTANCE_NX_ADC_BUFFER_0

config ADC_BUFFER0_CHANNEL_COUNT
    int "ADC_BUFFER0 channel count"
    default 4
    range 1 16
    help
      Number of ADC channels for ADC_BUFFER0.

config ADC_BUFFER0_BUFFER_SIZE
    int "ADC_BUFFER0 buffer size (samples)"
    default 256
    range 16 4096
    help
      Buffer size for ADC_BUFFER0 in samples.
      Will be aligned to multiple of channel count.

choice
    prompt "ADC_BUFFER0 trigger mode"
    default NX_ADC_BUFFER0_TRIGGER_SOFTWARE
    depends on INSTANCE_NX_ADC_BUFFER_0

config NX_ADC_BUFFER0_TRIGGER_SOFTWARE
    bool "Software trigger"

config NX_ADC_BUFFER0_TRIGGER_TIMER
    bool "Timer trigger"

config NX_ADC_BUFFER0_TRIGGER_EXTERNAL
    bool "External trigger"

endchoice

config ADC_BUFFER0_TRIGGER_VALUE
    int
    default 0 if NX_ADC_BUFFER0_TRIGGER_SOFTWARE
    default 1 if NX_ADC_BUFFER0_TRIGGER_TIMER
    default 2 if NX_ADC_BUFFER0_TRIGGER_EXTERNAL

endif # INSTANCE_NX_ADC_BUFFER_0

#ADC Buffer 1 Configuration
menuconfig INSTANCE_NX_ADC_BUFFER_1
