      Will be aligned to multiple of channel count.

endif # INSTANCE_NX_ADC_BUFFER_2

# ADC Buffer 3 Configuration
config INSTANCE_NX_ADC_BUFFER_3
    bool "Enable ADC_BUFFER3"
    default n
    help
      Enable ADC Buffer instance 3.

if INSTANCE_NX_ADC_BUFFER_3

config ADC_BUFFER3_CHANNEL_COUNT
    int "ADC_BUFFER3 channel count"
    default 4
    range 1 16
    help
      Number of ADC channels for ADC_BUFFER3.

