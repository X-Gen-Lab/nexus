    depends on INSTANCE_NX_ADC_1

config NX_ADC1_RESOLUTION_BIT_8
    bool "8-bit resolution"

config NX_ADC1_RESOLUTION_BIT_10
    bool "10-bit resolution"

config NX_ADC1_RESOLUTION_BIT_12
    bool "12-bit resolution"

config NX_ADC1_RESOLUTION_BIT_16
    bool "16-bit resolution"

endchoice

config ADC1_RESOLUTION_VALUE
    int
    default 0 if NX_ADC1_RESOLUTION_BIT_8
    default 1 if NX_ADC1_RESOLUTION_BIT_10
    default 2 if NX_ADC1_RESOLUTION_BIT_12
    default 3 if NX_ADC1_RESOLUTION_BIT_16

config ADC1_RESOLUTION
    int
    default 8 if NX_ADC1_RESOLUTION_BIT_8
    default 10 if NX_ADC1_RESOLUTION_BIT_10
    default 12 if NX_ADC1_RESOLUTION_BIT_12
    default 16 if NX_ADC1_RESOLUTION_BIT_16

choice
    prompt "ADC1 sampling time"
    default NX_ADC1_SAMPLE_TIME_MEDIUM
    depends on INSTANCE_NX_ADC_1

config NX_ADC1_SAMPLE_TIME_FAST
    bool "Fast (1.5 cycles)"

config NX_ADC1_SAMPLE_TIME_MEDIUM
    bool "Medium (7.5 cycles)"

config NX_ADC1_SAMPLE_TIME_SLOW
    bool "Slow (28.5 cycles)"

endchoice

config ADC1_SAMPLE_TIME_VALUE
    int
    default 0 if NX_ADC1_SAMPLE_TIME_FAST
    default 1 if NX_ADC1_SAMPLE_TIME_MEDIUM
    default 2 if NX_ADC1_SAMPLE_TIME_SLOW

endif # INSTANCE_NX_ADC_1

