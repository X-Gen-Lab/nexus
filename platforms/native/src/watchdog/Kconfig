# Watchdog Configuration for Native Platform

config NATIVE_WATCHDOG_ENABLE
    bool "Enable Watchdog support for Native platform"
    default y
    depends on PLATFORM_NATIVE
    help
      Enable Watchdog peripheral support for the Native platform.
      This provides simulated Watchdog functionality for testing
      and development on PC.

if NATIVE_WATCHDOG_ENABLE

# Watchdog0 Configuration
menuconfig INSTANCE_NX_WATCHDOG_0
    bool "Enable WATCHDOG0"
    default y
    depends on NATIVE_WATCHDOG_ENABLE
    help
      Enable Watchdog instance 0.

if INSTANCE_NX_WATCHDOG_0

config WATCHDOG0_DEFAULT_TIMEOUT_MS
    int "WATCHDOG0 default timeout (ms)"
    default 5000
    range 100 60000
    help
      Default timeout for WATCHDOG0 in milliseconds (simulated).
      Range: 100ms to 60000ms (1 minute).

endif # INSTANCE_NX_WATCHDOG_0

# Watchdog1 Configuration
menuconfig INSTANCE_NX_WATCHDOG_1
    bool "Enable WATCHDOG1"
    default n
    depends on NATIVE_WATCHDOG_ENABLE
    help
      Enable Watchdog instance 1.

if INSTANCE_NX_WATCHDOG_1

config WATCHDOG1_DEFAULT_TIMEOUT_MS
    int "WATCHDOG1 default timeout (ms)"
    default 5000
    range 100 60000
    help
