# Timer Configuration for Native Platform

config NATIVE_TIMER_ENABLE
    bool "Enable Timer support for Native platform"
    default y
    depends on PLATFORM_NATIVE
    help
      Enable Timer peripheral support for the Native platform.
      This provides simulated Timer functionality for testing
      and development on PC.

if NATIVE_TIMER_ENABLE

# Timer0 Configuration
menuconfig INSTANCE_NX_TIMER_0
    bool "Enable TIMER0"
    default y
    depends on NATIVE_TIMER_ENABLE
    help
      Enable Timer instance 0.

if INSTANCE_NX_TIMER_0

config TIMER0_FREQUENCY
    int "TIMER0 frequency (Hz)"
    default 1000000
    range 1000 100000000
    help
      Timer frequency for TIMER0 in Hz (simulated).

config TIMER0_CHANNEL_COUNT
    int "TIMER0 PWM channel count"
    default 4
    range 0 8
    help
      Number of PWM channels for TIMER0.

choice
    prompt "TIMER0 counter mode"
    default NX_TIMER0_MODE_UP
    depends on INSTANCE_NX_TIMER_0

config NX_TIMER0_MODE_UP
    bool "Up counting"

config NX_TIMER0_MODE_DOWN
    bool "Down counting"

config NX_TIMER0_MODE_CENTER
    bool "Center-aligned"

endchoice

config TIMER0_MODE_VALUE
    int
    default 0 if NX_TIMER0_MODE_UP
    default 1 if NX_TIMER0_MODE_DOWN
    default 2 if NX_TIMER0_MODE_CENTER

endif # INSTANCE_NX_TIMER_0

