# Timer Configuration for Native Platform

config TIMER_NATIVE
    bool "Enable Timer support for Native platform"
    default y
    depends on PLATFORM_NATIVE
    help
      Enable Timer peripheral support for the Native platform.
      This provides simulated Timer functionality for testing
      and development on PC.

if TIMER_NATIVE

config TIMER_MAX_INSTANCES
    int "Maximum number of Timer instances"
    default 8
    range 1 16
    help
      Maximum number of Timer instances supported by the
      Native platform.

# Timer0 Configuration
config INSTANCE_NX_TIMER_0
    bool "Enable TIMER0"
    default y
    help
      Enable Timer instance 0.

if INSTANCE_NX_TIMER_0

config TIMER0_FREQUENCY
    int "TIMER0 frequency (Hz)"
    default 1000000
    help
      Timer frequency for TIMER0 in Hz (simulated).

config TIMER0_CHANNEL_COUNT
    int "TIMER0 PWM channel count"
    default 4
    range 0 8
    help
      Number of PWM channels for TIMER0.

endif # INSTANCE_NX_TIMER_0

# Timer1 Configuration
config INSTANCE_NX_TIMER_1
