    default 0 if NX_CRC1_ALGORITHM_CRC32
    default 1 if NX_CRC1_ALGORITHM_CRC16
    default 2 if NX_CRC1_ALGORITHM_CRC8

config NX_CRC1_POLYNOMIAL
