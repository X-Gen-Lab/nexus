    default 0x04C11DB7 if NX_CRC1_ALGORITHM_CRC32
    default 0x1021 if NX_CRC1_ALGORITHM_CRC16
    default 0x07 if NX_CRC1_ALGORITHM_CRC8
    help
      CRC polynomial value for CRC1.

config NX_CRC1_INIT_VALUE
    hex "CRC1 initial value"
    default 0xFFFFFFFF if NX_CRC1_ALGORITHM_CRC32
    default 0xFFFF if NX_CRC1_ALGORITHM_CRC16
    default 0xFF if NX_CRC1_ALGORITHM_CRC8
    help
      Initial CRC value for CRC1.

config NX_CRC1_FINAL_XOR
    hex "CRC1 final XOR value"
    default 0xFFFFFFFF if NX_CRC1_ALGORITHM_CRC32
    default 0x0000 if NX_CRC1_ALGORITHM_CRC16
    default 0x00 if NX_CRC1_ALGORITHM_CRC8
    help
      Final XOR value applied to CRC result.

choice
    prompt "CRC1 input data format"
    default NX_CRC1_INPUT_BYTE
    depends on INSTANCE_NX_CRC_1

config NX_CRC1_INPUT_BYTE
    bool "Byte (8-bit)"

config NX_CRC1_INPUT_HALFWORD
    bool "Half-word (16-bit)"

config NX_CRC1_INPUT_WORD
    bool "Word (32-bit)"

endchoice

config NX_CRC1_INPUT_VALUE
    int
    default 0 if NX_CRC1_INPUT_BYTE
    default 1 if NX_CRC1_INPUT_HALFWORD
    default 2 if NX_CRC1_INPUT_WORD

config NX_CRC1_INPUT_FORMAT_VALUE
    int
    default 0 if NX_CRC1_INPUT_BYTE
    default 1 if NX_CRC1_INPUT_HALFWORD
    default 2 if NX_CRC1_INPUT_WORD

endif # INSTANCE_NX_CRC_1

endif # NATIVE_CRC_ENABLE
