# I2C Configuration for Native Platform

config NATIVE_I2C_ENABLE
    bool "Enable I2C support for Native platform"
    default y
    depends on PLATFORM_NATIVE
    help
      Enable I2C peripheral support for the Native platform.
      This provides simulated I2C functionality for testing
      and development on PC.

if NATIVE_I2C_ENABLE

# I2C0 Configuration
menuconfig INSTANCE_NX_I2C_0
    bool "Enable I2C0"
    default y
    depends on NATIVE_I2C_ENABLE
    help
      Enable I2C instance 0.

if INSTANCE_NX_I2C_0

choice
    prompt "I2C0 speed mode"
    default NX_I2C0_SPEED_STANDARD
    depends on INSTANCE_NX_I2C_0

config NX_I2C0_SPEED_STANDARD
    bool "Standard mode (100 kHz)"

config NX_I2C0_SPEED_FAST
    bool "Fast mode (400 kHz)"

config NX_I2C0_SPEED_FAST_PLUS
    bool "Fast mode plus (1 MHz)"

endchoice

config I2C0_SPEED_VALUE
    int
    default 0 if NX_I2C0_SPEED_STANDARD
    default 1 if NX_I2C0_SPEED_FAST
    default 2 if NX_I2C0_SPEED_FAST_PLUS

config I2C0_SPEED
    int
    default 100000 if NX_I2C0_SPEED_STANDARD
    default 400000 if NX_I2C0_SPEED_FAST
    default 1000000 if NX_I2C0_SPEED_FAST_PLUS

choice
    prompt "I2C0 addressing mode"
    default NX_I2C0_ADDR_BIT_7
    depends on INSTANCE_NX_I2C_0

config NX_I2C0_ADDR_BIT_7
    bool "7-bit addressing"

config NX_I2C0_ADDR_BIT_10
    bool "10-bit addressing"

endchoice

config I2C0_ADDR_VALUE
    int
    default 0 if NX_I2C0_ADDR_BIT_7
    default 1 if NX_I2C0_ADDR_BIT_10

config I2C0_ADDR_MODE_VALUE
    int
    default 0 if NX_I2C0_ADDR_BIT_7
    default 1 if NX_I2C0_ADDR_BIT_10

config I2C0_TX_BUFFER_SIZE
    int "I2C0 TX buffer size"
    default 256
    range 16 4096
    help
      Size of TX buffer for I2C0 in bytes.

config I2C0_RX_BUFFER_SIZE
    int "I2C0 RX buffer size"
    default 256
    range 16 4096
    help
      Size of RX buffer for I2C0 in bytes.

endif # INSTANCE_NX_I2C_0

