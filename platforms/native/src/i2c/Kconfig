# I2C Configuration for Native Platform

config I2C_NATIVE
    bool "Enable I2C support for Native platform"
    default y
    depends on PLATFORM_NATIVE
    help
      Enable I2C peripheral support for the Native platform.
      This provides simulated I2C functionality for testing
      and development on PC.

if I2C_NATIVE

config I2C_MAX_INSTANCES
    int "Maximum number of I2C instances"
    default 4
    range 1 8
    help
      Maximum number of I2C instances supported by the
      Native platform. Each instance requires buffer memory.

# I2C0 Configuration
config INSTANCE_NX_I2C_0
    bool "Enable I2C0"
    default y
    help
      Enable I2C instance 0.

if INSTANCE_NX_I2C_0

config I2C0_SPEED
    int "I2C0 speed (Hz)"
    default 100000
    help
      I2C speed for I2C0 in Hz (simulated).
      Standard mode: 100000 Hz
      Fast mode: 400000 Hz
      Fast mode plus: 1000000 Hz

config I2C0_SCL_PIN
    int "I2C0 SCL pin"
    default 5
    help
      SCL pin number for I2C0 (simulated).

config I2C0_SDA_PIN
    int "I2C0 SDA pin"
    default 4
    help
      SDA pin number for I2C0 (simulated).

config I2C0_TX_BUFFER_SIZE
    int "I2C0 TX buffer size"
    default 256
    range 16 4096
    help
      Size of TX buffer for I2C0 in bytes.

config I2C0_RX_BUFFER_SIZE
    int "I2C0 RX buffer size"
    default 256
    range 16 4096
    help
      Size of RX buffer for I2C0 in bytes.

endif # INSTANCE_NX_I2C_0

# I2C1 Configuration
config INSTANCE_NX_I2C_1
