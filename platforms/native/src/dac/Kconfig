# DAC Configuration for Native Platform

config NATIVE_DAC_ENABLE
    bool "Enable DAC support for Native platform"
    default y
    depends on PLATFORM_NATIVE
    help
      Enable DAC peripheral support for the Native platform.
      This provides simulated DAC functionality for testing
      and development on PC.

if NATIVE_DAC_ENABLE

# DAC0 Configuration
menuconfig INSTANCE_NX_DAC_0
    bool "Enable DAC0"
    default y
    depends on NATIVE_DAC_ENABLE
    help
      Enable DAC instance 0.

if INSTANCE_NX_DAC_0

config DAC0_CHANNEL_COUNT
    int "DAC0 channel count"
    default 2
    range 1 4
    help
      Number of DAC channels for DAC0.

choice
    prompt "DAC0 resolution"
    default NX_DAC0_RESOLUTION_BIT_12
    depends on INSTANCE_NX_DAC_0

config NX_DAC0_RESOLUTION_BIT_8
    bool "8-bit resolution"

config NX_DAC0_RESOLUTION_BIT_10
    bool "10-bit resolution"

config NX_DAC0_RESOLUTION_BIT_12
    bool "12-bit resolution"

config NX_DAC0_RESOLUTION_BIT_16
    bool "16-bit resolution"

endchoice

config DAC0_RESOLUTION_VALUE
    int
    default 0 if NX_DAC0_RESOLUTION_BIT_8
    default 1 if NX_DAC0_RESOLUTION_BIT_10
    default 2 if NX_DAC0_RESOLUTION_BIT_12
    default 3 if NX_DAC0_RESOLUTION_BIT_16

config DAC0_RESOLUTION
    int
    default 8 if NX_DAC0_RESOLUTION_BIT_8
    default 10 if NX_DAC0_RESOLUTION_BIT_10
    default 12 if NX_DAC0_RESOLUTION_BIT_12
    default 16 if NX_DAC0_RESOLUTION_BIT_16

config DAC0_VREF_MV
    int "DAC0 reference voltage (mV)"
    default 3300
    range 1000 5000
    help
      Reference voltage for DAC0 in millivolts.

choice
    prompt "DAC0 trigger mode"
    default NX_DAC0_TRIGGER_SOFTWARE
    depends on INSTANCE_NX_DAC_0

config NX_DAC0_TRIGGER_SOFTWARE
    bool "Software trigger"

config NX_DAC0_TRIGGER_TIMER
    bool "Timer trigger"

config NX_DAC0_TRIGGER_EXTERNAL
    bool "External trigger"

endchoice

config DAC0_TRIGGER_VALUE
    int
    default 0 if NX_DAC0_TRIGGER_SOFTWARE
    default 1 if NX_DAC0_TRIGGER_TIMER
    default 2 if NX_DAC0_TRIGGER_EXTERNAL

endif # INSTANCE_NX_DAC_0

