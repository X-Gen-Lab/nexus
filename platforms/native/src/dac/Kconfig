# DAC Configuration for Native Platform

config DAC_NATIVE
    bool "Enable DAC support for Native platform"
    default y
    depends on PLATFORM_NATIVE
    help
      Enable DAC peripheral support for the Native platform.
      This provides simulated DAC functionality for testing
      and development on PC.

if DAC_NATIVE

config DAC_MAX_INSTANCES
    int "Maximum number of DAC instances"
    default 4
    range 1 8
    help
      Maximum number of DAC instances supported by the
      Native platform.

# DAC0 Configuration
config INSTANCE_NX_DAC_0
    bool "Enable DAC0"
    default y
    help
      Enable DAC instance 0.

if INSTANCE_NX_DAC_0

config DAC0_CHANNEL_COUNT
    int "DAC0 channel count"
    default 2
    range 1 4
    help
      Number of DAC channels for DAC0.

config DAC0_RESOLUTION
    int "DAC0 resolution (bits)"
    default 12
    range 8 16
    help
      DAC resolution for DAC0 in bits.

config DAC0_VREF_MV
    int "DAC0 reference voltage (mV)"
    default 3300
    range 1000 5000
    help
      Reference voltage for DAC0 in millivolts.

endif # INSTANCE_NX_DAC_0

# DAC1 Configuration
config INSTANCE_NX_DAC_1
    bool "Enable DAC1"
    default n
    help
      Enable DAC instance 1.

if INSTANCE_NX_DAC_1

config DAC1_CHANNEL_COUNT
