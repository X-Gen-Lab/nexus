    bool "Input"

config NX_GPIOC_PIN0_MODE_OUTPUT_PP
    bool "Output Push-Pull"

config NX_GPIOC_PIN0_MODE_OUTPUT_OD
    bool "Output Open-Drain"

config NX_GPIOC_PIN0_MODE_AF_PP
    bool "Alternate Function Push-Pull"

config NX_GPIOC_PIN0_MODE_AF_OD
    bool "Alternate Function Open-Drain"

config NX_GPIOC_PIN0_MODE_ANALOG
    bool "Analog"

endchoice

