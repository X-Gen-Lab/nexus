    prompt "GPIOC PIN0 pull configuration"
    default NX_GPIOC_PIN0_PULL_NONE
    depends on INSTANCE_NX_GPIOC_PIN0

config NX_GPIOC_PIN0_PULL_NONE
    bool "No pull-up/pull-down"

config NX_GPIOC_PIN0_PULL_UP
    bool "Pull-up"

config NX_GPIOC_PIN0_PULL_DOWN
    bool "Pull-down"

endchoice

