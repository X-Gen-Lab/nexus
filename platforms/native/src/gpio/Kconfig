    int
    default 0 if NX_GPIOC_PIN0_MODE_INPUT
    default 1 if NX_GPIOC_PIN0_MODE_OUTPUT_PP
    default 2 if NX_GPIOC_PIN0_MODE_OUTPUT_OD
    default 3 if NX_GPIOC_PIN0_MODE_AF_PP
    default 4 if NX_GPIOC_PIN0_MODE_AF_OD
    default 5 if NX_GPIOC_PIN0_MODE_ANALOG

