{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "NEXUS_BUILD_TESTS": "ON",
                "NEXUS_BUILD_EXAMPLES": "ON",
                "NEXUS_PLATFORM": "native"
            }
        },
        {
            "name": "windows-base",
            "hidden": true,
            "inherits": "base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "linux-base",
            "hidden": true,
            "inherits": "base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "macos-base",
            "hidden": true,
            "inherits": "base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "windows-msvc-debug",
            "displayName": "Windows MSVC Debug",
            "description": "Windows build with MSVC compiler (Debug)",
            "inherits": "windows-base",
            "generator": "Visual Studio 17 2022",
            "architecture": {
                "value": "x64",
                "strategy": "set"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            }
        },
        {
            "name": "windows-msvc-release",
            "displayName": "Windows MSVC Release",
            "description": "Windows build with MSVC compiler (Release)",
            "inherits": "windows-msvc-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "windows-gcc-debug",
            "displayName": "Windows GCC Debug (MinGW)",
            "description": "Windows build with GCC compiler (Debug)",
            "inherits": "windows-base",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "windows-gcc-release",
            "displayName": "Windows GCC Release (MinGW)",
            "description": "Windows build with GCC compiler (Release)",
            "inherits": "windows-gcc-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "windows-clang-debug",
            "displayName": "Windows Clang Debug",
            "description": "Windows build with Clang compiler (Debug)",
            "inherits": "windows-base",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "windows-clang-release",
            "displayName": "Windows Clang Release",
            "description": "Windows build with Clang compiler (Release)",
            "inherits": "windows-clang-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "linux-gcc-debug",
            "displayName": "Linux GCC Debug",
            "description": "Linux build with GCC compiler (Debug)",
            "inherits": "linux-base",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "linux-gcc-release",
            "displayName": "Linux GCC Release",
            "description": "Linux build with GCC compiler (Release)",
            "inherits": "linux-gcc-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "linux-gcc-coverage",
            "displayName": "Linux GCC Coverage",
            "description": "Linux build with GCC and coverage enabled",
            "inherits": "linux-gcc-debug",
            "cacheVariables": {
                "NEXUS_ENABLE_COVERAGE": "ON"
            }
        },
        {
            "name": "linux-clang-debug",
            "displayName": "Linux Clang Debug",
            "description": "Linux build with Clang compiler (Debug)",
            "inherits": "linux-base",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "linux-clang-release",
            "displayName": "Linux Clang Release",
            "description": "Linux build with Clang compiler (Release)",
            "inherits": "linux-clang-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "macos-clang-debug",
            "displayName": "macOS Clang Debug",
            "description": "macOS build with Clang compiler (Debug)",
            "inherits": "macos-base",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "macos-clang-release",
            "displayName": "macOS Clang Release",
            "description": "macOS build with Clang compiler (Release)",
            "inherits": "macos-clang-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "cross-arm-debug",
            "displayName": "ARM Cross-Compile Debug (STM32F4)",
            "description": "Cross-compilation for ARM Cortex-M4 (STM32F4)",
            "inherits": "base",
            "generator": "Ninja",
            "toolchainFile": "${sourceDir}/cmake/toolchains/arm-none-eabi.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "NEXUS_PLATFORM": "stm32f4",
                "NEXUS_BUILD_TESTS": "OFF"
            }
        },
        {
            "name": "cross-arm-release",
            "displayName": "ARM Cross-Compile Release (STM32F4)",
            "description": "Cross-compilation for ARM Cortex-M4 (STM32F4)",
            "inherits": "cross-arm-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "windows-msvc-debug",
            "configurePreset": "windows-msvc-debug",
            "configuration": "Debug"
        },
        {
            "name": "windows-msvc-release",
            "configurePreset": "windows-msvc-release",
            "configuration": "Release"
        },
        {
            "name": "windows-gcc-debug",
            "configurePreset": "windows-gcc-debug"
        },
        {
            "name": "windows-gcc-release",
            "configurePreset": "windows-gcc-release"
        },
        {
            "name": "windows-clang-debug",
            "configurePreset": "windows-clang-debug"
        },
        {
            "name": "windows-clang-release",
            "configurePreset": "windows-clang-release"
        },
        {
            "name": "linux-gcc-debug",
            "configurePreset": "linux-gcc-debug"
        },
        {
            "name": "linux-gcc-release",
            "configurePreset": "linux-gcc-release"
        },
        {
            "name": "linux-clang-debug",
            "configurePreset": "linux-clang-debug"
        },
        {
            "name": "linux-clang-release",
            "configurePreset": "linux-clang-release"
        },
        {
            "name": "macos-clang-debug",
            "configurePreset": "macos-clang-debug"
        },
        {
            "name": "macos-clang-release",
            "configurePreset": "macos-clang-release"
        },
        {
            "name": "linux-gcc-coverage",
            "configurePreset": "linux-gcc-coverage"
        },
        {
            "name": "cross-arm-debug",
            "configurePreset": "cross-arm-debug"
        },
        {
            "name": "cross-arm-release",
            "configurePreset": "cross-arm-release"
        }
    ],
    "testPresets": [
        {
            "name": "base-test",
            "hidden": true,
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": false
            }
        },
        {
            "name": "windows-msvc-debug",
            "configurePreset": "windows-msvc-debug",
            "inherits": "base-test",
            "configuration": "Debug"
        },
        {
            "name": "windows-msvc-release",
            "configurePreset": "windows-msvc-release",
            "inherits": "base-test",
            "configuration": "Release"
        },
        {
            "name": "windows-gcc-debug",
            "configurePreset": "windows-gcc-debug",
            "inherits": "base-test"
        },
        {
            "name": "windows-gcc-release",
            "configurePreset": "windows-gcc-release",
            "inherits": "base-test"
        },
        {
            "name": "windows-clang-debug",
            "configurePreset": "windows-clang-debug",
            "inherits": "base-test"
        },
        {
            "name": "windows-clang-release",
            "configurePreset": "windows-clang-release",
            "inherits": "base-test"
        },
        {
            "name": "linux-gcc-debug",
            "configurePreset": "linux-gcc-debug",
            "inherits": "base-test"
        },
        {
            "name": "linux-gcc-release",
            "configurePreset": "linux-gcc-release",
            "inherits": "base-test"
        },
        {
            "name": "linux-clang-debug",
            "configurePreset": "linux-clang-debug",
            "inherits": "base-test"
        },
        {
            "name": "linux-clang-release",
            "configurePreset": "linux-clang-release",
            "inherits": "base-test"
        },
        {
            "name": "linux-gcc-coverage",
            "configurePreset": "linux-gcc-coverage",
            "inherits": "base-test"
        },
        {
            "name": "macos-clang-debug",
            "configurePreset": "macos-clang-debug",
            "inherits": "base-test"
        },
        {
            "name": "macos-clang-release",
            "configurePreset": "macos-clang-release",
            "inherits": "base-test"
        }
    ]
}
